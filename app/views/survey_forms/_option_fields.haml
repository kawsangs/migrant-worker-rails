%fieldset.option-field
  .field-wrapper{style: 'margin-top: 1em'}
    = f.hidden_field :_destroy
    = link_to '#', class: "remove_fields btn btn-link" do
      %i.fa.fa-trash-alt.text-danger

    %div.flex-1
      .d-flex.flex-1
        .flex-1.mr-2
          = f.input :name, label: false, placeholder: "This option has no name"
        .flex-1.mr-2
          = f.input :value, label: false, placeholder: "value"
        .mr-2
          = link_to "Advanced", "#", class: 'btn btn-advance'

      .advance-options{class: ('d-none' unless f.object.alert_message.present?)}
        .d-flex
          .m-2.mr-3
            = f.input :warning, label: 'Set as warning?'
          .m-2
            = f.input :recursive, label: "Repeat the question?"

