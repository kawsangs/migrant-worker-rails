.d-sm-flex.align-items-center.justify-content-between.mb-4
  %h1.h3.mb-0.text-gray-800= t("institution.title")
  - if @institutions.present?
    = link_to new_institution_path, class: "btn btn-primary btn-sm shadow-sm" do
      %i.fas.fa-plus.fa-sm.text-white-50
      = t('shared.add_new')

%form.d-flex{ action: '/institutions', method: 'get' }
  .form-group
    .input-group
      = text_field_tag(:keyword, params[:keyword], class: 'form-control keyword', placeholder: t('shared.search'))

      %a#info.input-group-append
        .input-group-text
          %i.fas.fa-search

.card.shadow.mb-4
  .card-body
    = render partial: "shared/no_data", locals: { items: @institutions, url: new_institution_path, label: t('shared.add_new') }

    - if @institutions.present?
      = render 'shared/pagy_label'

      %table.table.table-hover
        %thead
          %tr
            %th #
            %th= t('institution.name')
            %th= t('institution.name_km')
            %th= t('institution.countries')
            %th= t('institution.contacts')
            %th= t('institution.logo')
            %th= t('institution.audio')
            %th= t('institution.address')
            %th
        %tbody
          = render @institutions

      - if @pagy.pages > 1
        .pagy-wrapper
          != pagy_bootstrap_nav(@pagy)
