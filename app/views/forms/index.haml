.d-sm-flex.align-items-center.justify-content-between.mb-4
  %h1.h3.mb-0.text-gray-800= t("category.story_form")
  - if @forms.present?
    = link_to new_form_path, class: "btn btn-primary btn-sm shadow-sm" do
      %i.fas.fa-plus.fa-sm.text-white-50
      = t('shared.add_new')

.card.shadow.mb-4
  .card-body
    = render partial: "shared/no_data", locals: { items: @forms, url: new_form_path, label: t('shared.add_new') }

    - if @forms.present?
      = render 'shared/pagy_label'

      %table.table.table-hover
        %thead
          %tr
            %th #
            %th= t('form.name')
            %th= t('shared.created_at')
            %th= t('shared.modified_at')
            %th
            %th
        %tbody
          - @forms.each_with_index do |form, index|
            %tr
              %td= @pagy.from + index
              %td= form.name
              %td= l(form.created_at)
              %td= l(form.updated_at)
              %td
                - if form.published?
                  %span.badge.badge-success= t("form.published")
                - else
                  %a.btn.btn-link{"data-target" => "#publishModal_#{form.id}", "data-toggle" => "modal", href: '#'}
                    = t("form.publish")
                  = render 'modal_confirm_publish', form: form

              %td.text-right
                = render 'shared/action_buttons', edit_url: edit_form_path(form), delete_url: form_path(form), object: form
