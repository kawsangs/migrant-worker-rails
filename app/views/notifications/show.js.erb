<% title = "#{t('notification.delivery_progress')}: #{@notification.title} <b>(#{notification_occurence_number(@notification)})</b>" %>

$('#deliveryProgressModal .modal-title').html("<%= title.html_safe %>");
$('#deliveryProgressModal .modal-body').html("<%= j render('notifications/show/delivery_progress_detail') %>");

var dom = $("#delivery-progress-table")
dom.toggleClass('no-data', !dom.find(".item").length)

$("#deliveryProgressModal").modal("show");
