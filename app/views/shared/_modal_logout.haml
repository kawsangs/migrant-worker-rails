  .modal-dialog.modal-dialog-centered{:role => "document"}
    .modal-content
      .modal-header
        %h5#exampleModalLabel.modal-title= t("sidebar.logout")
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body= t("shared.confirm_logout")
      .modal-footer
        %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"}= t("shared.cancel")
        = link_to t("sidebar.logout"), destroy_account_session_path, method: :delete, class: "btn btn-primary"
