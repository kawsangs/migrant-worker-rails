- if notice.present?
  .alert.alert-success.alert-dismissible.fade.show.notify-message.ml-2{:role => "alert"}
    = notice
    %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
      %span{"aria-hidden" => "true"} ×

- if alert.present?
  .alert.alert-warning.alert-dismissible.fade.show.notify-message.ml-2{:role => "alert"}
    - if alert.kind_of?(Array)
      - alert.each do |message|
        %div= message
    - else
      = alert

    %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
      %span{"aria-hidden" => "true"} ×

:javascript
  setTimeout(function() {
    $( ".alert" ).fadeOut( "slow" )
  }, 3000);
